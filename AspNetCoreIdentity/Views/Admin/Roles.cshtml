@model List<RoleViewModel>

@{
    Layout = "_AdminLayout";
}

<div class="row mt-5">
    <h6 class="display-3 text-center text-primary">List of Roles</h6>
    <hr />
</div>


@if (ViewBag.Message == "Role was deleted successfully.")
{
    <div class="row mt-5">
        <div class="col-md-4 offset-4">
            <span class="alert alert-success text-center">@ViewBag.Message</span>
        </div>
    </div>
}

@if (ViewBag.Message == "There is an error!")
{
    <div class="row mt-5">
        <div class="col-md-4 offset-4">
            <span class="alert alert-danger text-center">@ViewBag.Message</span>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-4 offset-3">
        <a class="btn btn-success" asp-controller="Admin" asp-action="CreateRole">New Role</a>
    </div>
</div>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <table class="table table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Role Name</th>
                </tr>
            </thead>
            @if (Model.Count() < 1)
            {
                <tr>
                    <td colspan="5">There is no any role!</td>
                </tr>
            }
            else
            {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-controller="Admin" asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                <a asp-controller="Admin" asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-warning">Update</a>

                            </td>
                        </tr>
                    }
                </tbody>
            }

        </table>
    </div>
</div>
