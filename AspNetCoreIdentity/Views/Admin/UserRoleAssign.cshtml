@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "UserRoleAssign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-5">
    <div class="col-md-4 offset-4">
        <h6 class="display-3 text-center text-primary">Role Assign</h6>
        <h4 class="text-center text-info">@ViewBag.userName</h4>
    </div>
</div>
<hr />

<div class="row mt-5">
    <div class="col-md-6 offset-3">
        <form asp-action="UserRoleAssign"  method="post">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="form-check">
                    <input asp-for="@Model[i].IsChacked" type="checkbox" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].RoleId">@Model[i].Name</label>
                    <input asp-for="@Model[i].Name" type="hidden" />
                    <input asp-for="@Model[i].RoleId" type="hidden" />
                </div>
            }

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Assign</button>
        </div>
        </form>
    </div>
</div>