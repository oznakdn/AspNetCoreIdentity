@model List<AppUser>

@{
    Layout = "_AdminLayout";
}

<div class="row mt-5">
    <h6 class="display-3 text-center text-primary">List of Users</h6>
    <hr />
</div>

<div class="row mt-5">
    <div class="col-6 offset-3">
        <table class="table table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email Address</th>
                    <th>Phone Number</th>
                    <th>City</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @if (Model.Count() < 1)
            {
                <tr>
                    <td colspan="5">There is no any member!</td>
                </tr>
            }
            else
            {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.City</td>

                            <td user-roles="@item.Id"></td>
                            <td>
                                <a asp-controller="Admin" asp-action="UserRoleAssign" asp-route-id="@item.Id" class="btn btn-info">Assign Role</a>
                            </td>
                        </tr>
                    }
                </tbody>
            }

        </table>
    </div>
</div>
