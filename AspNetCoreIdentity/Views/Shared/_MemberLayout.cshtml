<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspNetCoreIdentity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspNetCoreIdentity.styles.css" asp-append-version="true" />
</head>
<body>
   
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"> Member</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Member" asp-action="PasswordChange">Password Change</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Member" asp-action="UserEdit">User Edit</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Member" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>

            <div class="col-md-4">
                <h3>Menu</h3>
                <a class="btn btn-primary" asp-action="PasswordChange" asp-controller="Member">Password Change</a>
                <a class="btn btn-primary" asp-action="UserEdit" asp-controller="Member">User Edit</a>
                <a class="btn btn-primary" asp-action="Logout" asp-controller="Member">Logout</a>
            </div>
        </div>
    </div>
   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
