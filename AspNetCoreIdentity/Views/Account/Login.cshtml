@model LoginViewModel

<div class="row mt-5">
    <div class="col-2 offset-5">
        @if (TempData["Message"] != null)
        {
            <span class="alert alert-danger">@TempData["Message"]</span>

        }
    </div>
</div>

<div class="row mt-5">
    <h6 class="display-2 text-center text-primary">Login</h6>
</div>

<div class="row mt-5">
    <div class="col-6 offset-3">
        <form asp-action="Login" method="post" class="w-50 mx-lg-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                <label class="form-label">Remember Me!</label>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Login</button>
                <a asp-controller="Account" asp-action="PasswordReset" class="link link-primary mx-5">Forgot your password!</a>
            </div>
        </form>
    </div>
</div>